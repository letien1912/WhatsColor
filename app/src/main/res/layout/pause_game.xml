<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_pause_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_top"
            android:paddingBottom="@dimen/padding_dialog_range_down">


            <TextView
                android:id="@+id/text_pause_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/padding_dialog_range_left"
                android:paddingBottom="@dimen/padding_dialog_range_left"
                android:textColor="@color/textColor"
                android:text="@string/pause_game"
                android:textSize="@dimen/head_text_size" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rl_pause_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:paddingStart="@dimen/padding_dialog_range_left"
            android:paddingEnd="@dimen/padding_dialog_range_left">
            <ImageView
                android:id="@+id/button_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:onClick="backToHomeEvent"
                android:src="@drawable/ic_pause_home"
                android:layout_alignParentLeft="true" />
            <ImageView
                android:id="@+id/button_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/pause_restart"/>
            <ImageView
                android:id="@+id/button_continue"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause_continue"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>